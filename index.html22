    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">
    
    <style>
        body { font-family: 'Inter', sans-serif; background-color: #f3f4f6; -webkit-tap-highlight-color: transparent; }
        
        /* Anima√ß√µes */
        .fade-in { animation: fadeIn 0.3s ease-out; }
        .slide-up { animation: slideUp 0.3s ease-out; }
        
        @keyframes fadeIn { from { opacity: 0; } to { opacity: 1; } }
        @keyframes slideUp { from { transform: translateY(20px); opacity: 0; } to { transform: translateY(0); opacity: 1; } }
        
        /* Autocomplete Customizado */
        .autocomplete-wrapper { position: relative; }
        .autocomplete-dropdown {
            position: absolute;
            top: 100%;
            left: 0;
            right: 0;
            background: white;
            border: 1px solid #e5e7eb;
            border-radius: 0.5rem;
            margin-top: 4px;
            max-height: 250px;
            overflow-y: auto;
            z-index: 50;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        }
        .autocomplete-item {
            padding: 10px 16px;
            cursor: pointer;
            border-bottom: 1px solid #f3f4f6;
            transition: background 0.2s;
        }
        .autocomplete-item:hover, .autocomplete-item.selected { background-color: #eff6ff; }
        .autocomplete-item:last-child { border-bottom: none; }
        
        /* Scrollbar suave */
        ::-webkit-scrollbar { width: 6px; }
        ::-webkit-scrollbar-thumb { background: #cbd5e1; border-radius: 3px; }
        ::-webkit-scrollbar-thumb:hover { background: #94a3b8; }

        .spinner { animation: spin 1s linear infinite; }
        @keyframes spin { from { transform: rotate(0deg); } to { transform: rotate(360deg); } }
    </style>
</head>
<body>

    <!-- Loading Overlay -->
    <div id="loading" class="fixed inset-0 bg-black/50 z-[9999] hidden flex items-center justify-center backdrop-blur-sm">
        <div class="bg-white p-6 rounded-2xl shadow-2xl text-center">
            <i class="ph ph-spinner ph-spin text-4xl text-blue-600 mb-2"></i>
            <p class="text-gray-700 font-semibold" id="loading-text">Carregando...</p>
        </div>
    </div>

    <!-- App Container -->
    <div id="app"></div>

    <script>
        // ============================================
        // CONFIGURA√á√ÉO & ESTADO
        // ============================================
        // IMPORTANTE: Substitua pela URL do seu Script Google
        const API_URL = 'https://script.google.com/macros/s/AKfycbwxGAQlf6699osRjUSenW7E9Ca-GXbU1-s67UVWVmfpKy6cPQnTJeSh14Z6uapFp8P0Cg/exec';
        
        const CACHE_KEY = 'turno_app_cache_v2';
        
        let state = {
            view: 'login',
            user: null,
            equipamentos: [],
            colaboradores: [], // Cache local para busca r√°pida
            vagas: [],
            currentRelatorio: null,
            relatoriosHistorico: [],
            dashboardData: null,
            sidebarOpen: false
        };

        // ============================================
        // CORE FUNCTIONS
        // ============================================

        // Inicializa√ß√£o
        document.addEventListener('DOMContentLoaded', () => {
            const savedUser = localStorage.getItem('user_session');
            if (savedUser) {
                state.user = JSON.parse(savedUser);
                initApp();
            } else {
                renderLogin();
            }
        });

        async function initApp() {
            showLoading(true, 'Sincronizando dados...');
            try {
                // Carregamento paralelo para velocidade
                const [eqRes, colRes, vagRes] = await Promise.all([
                    fetchAPI('getEquipamentos', { supervisor: state.user.nome }),
                    fetchAPI('getColaboradores', { supervisor: state.user.nome }),
                    fetchAPI('getVagas')
                ]);

                if (eqRes.success) state.equipamentos = eqRes.equipamentos;
                if (colRes.success) state.colaboradores = colRes.colaboradores;
                if (vagRes.success) state.vagas = vagRes.vagas;

                navigateTo('novo-relatorio');
            } catch (e) {
                showToast('Erro ao carregar dados iniciais', 'error');
                console.error(e);
            } finally {
                showLoading(false);
            }
        }

        // Navega√ß√£o
        function navigateTo(view) {
            state.view = view;
            state.sidebarOpen = false; // Fecha sidebar no mobile
            
            if (view === 'novo-relatorio') renderNovoRelatorio();
            else if (view === 'historico') renderHistorico();
            else if (view === 'dashboard') renderDashboard();
        }

        // ============================================
        // AUTOCOMPLETE LOGIC (MOTOR DE BUSCA)
        // ============================================
        function setupAutocomplete(inputId, dataList, onSelect) {
            const input = document.getElementById(inputId);
            if (!input) return;

            let currentFocus = -1;

            // Criar wrapper se n√£o existir
            if (!input.parentNode.classList.contains('autocomplete-wrapper')) {
                const wrapper = document.createElement('div');
                wrapper.className = 'autocomplete-wrapper';
                input.parentNode.insertBefore(wrapper, input);
                wrapper.appendChild(input);
            }

            input.addEventListener('input', function(e) {
                const val = this.value;
                closeAllLists();
                if (!val) return false;
                
                currentFocus = -1;
                const list = document.createElement('div');
                list.setAttribute('id', this.id + 'autocomplete-list');
                list.setAttribute('class', 'autocomplete-dropdown');
                this.parentNode.appendChild(list);

                // Filtragem Inteligente (Nome ou Fun√ß√£o)
                const matches = dataList.filter(item => 
                    item.nome.toUpperCase().includes(val.toUpperCase()) || 
                    (item.funcao && item.funcao.toUpperCase().includes(val.toUpperCase()))
                ).slice(0, 8); // Limita a 8 resultados para performance

                if(matches.length === 0) {
                    const noResult = document.createElement('div');
                    noResult.className = 'autocomplete-item text-gray-400 cursor-default';
                    noResult.innerHTML = 'Nenhum resultado encontrado';
                    list.appendChild(noResult);
                }

                matches.forEach(item => {
                    const itemDiv = document.createElement('div');
                    itemDiv.className = 'autocomplete-item';
                    itemDiv.innerHTML = `
                        <div class="font-semibold text-gray-800">${item.nome}</div>
                        <div class="text-xs text-gray-500">${item.funcao || 'N/A'} ‚Ä¢ ${item.regime || 'N/A'}</div>
                    `;
                    itemDiv.addEventListener('click', function() {
                        input.value = item.nome;
                        if (onSelect) onSelect(item);
                        closeAllLists();
                    });
                    list.appendChild(itemDiv);
                });
            });

            input.addEventListener('keydown', function(e) {
                let x = document.getElementById(this.id + 'autocomplete-list');
                if (x) x = x.getElementsByTagName('div');
                if (e.keyCode == 40) { // Down
                    currentFocus++;
                    addActive(x);
                } else if (e.keyCode == 38) { // Up
                    currentFocus--;
                    addActive(x);
                } else if (e.keyCode == 13) { // Enter
                    e.preventDefault();
                    if (currentFocus > -1) {
                        if (x) x[currentFocus].click();
                    }
                }
            });

            function addActive(x) {
                if (!x) return false;
                removeActive(x);
                if (currentFocus >= x.length) currentFocus = 0;
                if (currentFocus < 0) currentFocus = (x.length - 1);
                x[currentFocus].classList.add('selected');
                x[currentFocus].scrollIntoView({ block: 'nearest' });
            }

            function removeActive(x) {
                for (let i = 0; i < x.length; i++) {
                    x[i].classList.remove('selected');
                }
            }

            function closeAllLists(elmnt) {
                const x = document.getElementsByClassName('autocomplete-dropdown');
                for (let i = 0; i < x.length; i++) {
                    if (elmnt != x[i] && elmnt != input) {
                        x[i].parentNode.removeChild(x[i]);
                    }
                }
            }

            document.addEventListener('click', function (e) {
                closeAllLists(e.target);
            });
        }

        // ============================================
        // L√ìGICA DE NEG√ìCIO - RELAT√ìRIO
        // ============================================
        
        function iniciarNovoRelatorio() {
            state.currentRelatorio = {
                id: `REL-${Date.now()}`,
                supervisor: state.user.nome,
                letraTurno: state.user.letraTurno || '',
                data: new Date().toISOString().split('T')[0],
                equipamentosOperando: [],
                observacoes: '',
                criadoEm: new Date().toISOString()
            };
            // Adiciona um equipamento padr√£o
            adicionarEquipamento(); 
            renderNovoRelatorio();
        }

        function adicionarEquipamento() {
            if (!state.currentRelatorio) iniciarNovoRelatorio();
            
            state.currentRelatorio.equipamentosOperando.push({
                _tempId: Date.now(), // ID para controle de DOM
                equipamento: '',
                vaga: '',
                area: '',
                motorista: '',
                operadores: '',
                trocas: []
            });
            renderNovoRelatorio();
        }

        function removerEquipamento(index) {
            if(confirm("Remover este equipamento?")) {
                state.currentRelatorio.equipamentosOperando.splice(index, 1);
                renderNovoRelatorio();
            }
        }

        function adicionarTroca(equipIndex) {
            const equip = state.currentRelatorio.equipamentosOperando[equipIndex];
            equip.trocas.push({
                motivo: '',
                equipamentoNovo: '',
                dataHora: new Date().toISOString().slice(0, 16),
                observacao: ''
            });
            renderNovoRelatorio();
        }

        function removerTroca(equipIndex, trocaIndex) {
            state.currentRelatorio.equipamentosOperando[equipIndex].trocas.splice(trocaIndex, 1);
            renderNovoRelatorio();
        }

        async function salvarRelatorio() {
            // Valida√ß√µes
            const rel = state.currentRelatorio;
            if(!rel.equipamentosOperando.length) return showToast("Adicione ao menos um equipamento", "warning");
            
            for(let eq of rel.equipamentosOperando) {
                if(!eq.equipamento || !eq.vaga || !eq.area) return showToast("Preencha os campos obrigat√≥rios (*)", "warning");
            }

            if(!confirm("Confirmar o envio do relat√≥rio?")) return;

            showLoading(true, "Salvando relat√≥rio...");
            try {
                const res = await fetch(API_URL, {
                    method: 'POST',
                    body: JSON.stringify({ action: 'saveRelatorio', relatorio: rel })
                });
                const json = await res.json();
                
                if(json.success) {
                    showToast("Relat√≥rio salvo com sucesso!", "success");
                    state.currentRelatorio = null;
                    navigateTo('historico');
                } else {
                    throw new Error(json.error);
                }
            } catch(e) {
                showToast("Erro ao salvar: " + e.message, "error");
            } finally {
                showLoading(false);
            }
        }

        // ============================================
        // RENDERIZA√á√ÉO
        // ============================================

        function renderLogin() {
            const app = document.getElementById('app');
            app.innerHTML = `
                <div class="min-h-screen flex items-center justify-center p-6 bg-gradient-to-br from-blue-900 to-blue-700">
                    <div class="bg-white rounded-2xl shadow-xl w-full max-w-md p-8 fade-in">
                        <div class="text-center mb-8">
                            <div class="w-20 h-20 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
                                <i class="ph-fill ph-clipboard-text text-4xl text-blue-600"></i>
                            </div>
                            <h1 class="text-2xl font-bold text-gray-800">Relat√≥rio de Turno</h1>
                            <p class="text-gray-500 text-sm">Acesso do Supervisor</p>
                        </div>
                        <form onsubmit="handleLogin(event)" class="space-y-5">
                            <div>
                                <label class="block text-sm font-semibold text-gray-700 mb-2">Usu√°rio</label>
                                <div class="relative">
                                    <i class="ph ph-user absolute left-3 top-3.5 text-gray-400 text-lg"></i>
                                    <input type="text" id="username" class="w-full pl-10 border border-gray-300 rounded-lg px-4 py-3 focus:ring-2 focus:ring-blue-500 outline-none" placeholder="Seu usu√°rio" required>
                                </div>
                            </div>
                            <div>
                                <label class="block text-sm font-semibold text-gray-700 mb-2">Senha</label>
                                <div class="relative">
                                    <i class="ph ph-lock absolute left-3 top-3.5 text-gray-400 text-lg"></i>
                                    <input type="password" id="password" class="w-full pl-10 border border-gray-300 rounded-lg px-4 py-3 focus:ring-2 focus:ring-blue-500 outline-none" placeholder="Sua senha" required>
                                </div>
                            </div>
                            <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 rounded-lg shadow-lg transition-all flex justify-center items-center gap-2">
                                <span>Entrar</span>
                                <i class="ph-bold ph-arrow-right"></i>
                            </button>
                        </form>
                    </div>
                </div>
            `;
        }

        function getLayout(content) {
            const isGestao = state.user.accessLevel === 'gestao';
            
