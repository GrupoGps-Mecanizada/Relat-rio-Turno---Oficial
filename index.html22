        function renderNovoRelatorio() {
            const app = document.getElementById('app');
            
            if(!state.currentRelatorio) {
                // Estado vazio
                app.innerHTML = getLayout(`
                    <div class="bg-white rounded-2xl shadow-sm p-12 text-center fade-in">
                        <div class="w-24 h-24 bg-blue-50 rounded-full flex items-center justify-center mx-auto mb-6">
                            <i class="ph-duotone ph-file-plus text-5xl text-blue-600"></i>
                        </div>
                        <h2 class="text-2xl font-bold text-gray-900 mb-2">Come√ßar Turno</h2>
                        <p class="text-gray-500 mb-8 max-w-md mx-auto">Inicie um novo relat√≥rio para registrar as atividades, equipamentos e ocorr√™ncias do seu turno.</p>
                        <button onclick="iniciarNovoRelatorio()" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-8 rounded-xl shadow-lg hover:shadow-xl transition-all transform hover:-translate-y-1">
