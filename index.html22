                            <button onclick="navigateTo('novo-relatorio')" class="w-full flex items-center gap-3 px-4 py-3 rounded-xl transition-all font-medium ${state.view === 'novo-relatorio' ? 'bg-blue-50 text-blue-700' : 'text-gray-600 hover:bg-gray-50'}">
                                <i class="ph ph-plus-circle text-xl"></i>
                                <span>Novo Relat√≥rio</span>
                            </button>
                            
                            <button onclick="navigateTo('historico')" class="w-full flex items-center gap-3 px-4 py-3 rounded-xl transition-all font-medium ${state.view === 'historico' ? 'bg-blue-50 text-blue-700' : 'text-gray-600 hover:bg-gray-50'}">
