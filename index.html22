                            <label class="block text-xs font-semibold text-gray-500 uppercase mb-1">Vaga *</label>
                            <select onchange="state.currentRelatorio.equipamentosOperando[${idx}].vaga = this.value" class="w-full border border-gray-300 rounded-lg p-2.5 focus:border-blue-500 outline-none bg-white">
                                <option value="">Selecione...</option>
                                ${state.vagas.map(v => `<option value="${v.nome}" ${eq.vaga === v.nome ? 'selected' : ''}>${v.nome}</option>`).join('')}
                            </select>
                        </div>
                        <div class="md:col-span-2">
                            <label class="block text-xs font-semibold text-gray-500 uppercase mb-1">√Årea de Atua√ß√£o *</label>
                            <input type="text" value="${eq.area}" onchange="state.currentRelatorio.equipamentosOperando[${idx}].area = this.value" class="w-full border border-gray-300 rounded-lg p-2.5 focus:border-blue-500 outline-none" placeholder="Ex: Galp√£o A, Linha 3...">
                        </div>
                        
                        <!-- Autocomplete Motorista -->
                        <div>
                            <label class="block text-xs font-semibold text-gray-500 uppercase mb-1">Motorista</label>
                            <input type="text" 
                                id="motorista_input_${eq._tempId}" 
